<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="Microsoft.Azure.Cosmos.Build.props" />
  <PropertyGroup>
  <ClientVersion Condition=" '$(IsPreview)' != 'true' ">$(ClientOfficialVersion)</ClientVersion>
  <!--Preview version is still supported here with Microsoft.Azure.Cosmos.Preview.csproj to avoid breaking all the build/release systems dependencies-->
  <ClientVersion Condition=" '$(IsPreview)' == 'true' ">$(ClientPreviewVersion)</ClientVersion>
  
  <FileVersion>$(ClientVersion)</FileVersion>
  
  <Version Condition=" '$(IsPreview)' != 'true' ">$(ClientOfficialVersion)</Version>
  
  <Version Condition=" '$(ClientPreviewVersionSuffix)' == '' ">$(ClientVersion)-preview</Version>
  <Version Condition=" '$(ClientPreviewVersionSuffix)' != '' ">$(ClientVersion)-preview$(ClientPreviewVersionSuffix)</Version>
  <DefineConstants Condition="'$(IsPreview)' == 'true' ">$(DefineConstants);PREVIEW</DefineConstants>

  </PropertyGroup>
</Project>
